<% content_for :content do %>
    <main role="main" class="container">
<%= form_with model: @gm_form2, local: true do |form| %>
     <%= hidden_field_tag :user_id, user_id%>
    <div class="field">
        <%= form.label :title_of_adventure_or_session %>
        <%= form.text_field :title_of_adventure_or_session, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :type_of_game %>
        <%= form.select :type_of_game, options_for_select(["Role playing game", "Live action role playing", "Collectible card game","Miniatures", "Board game", "Card game", "Other"], selected: @gm_form2.type_of_game),class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :game_system_used %>
        <%= form.text_field :game_system_used, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :time_needed_for_game %>
        <%= form.text_field :time_needed_for_game, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :materials_needed %>
        <%= form.select :materials_needed, options_for_select(["All materials for the game are provided by the gm", "All materials for the game are offered, but players can bring their own", "All players are required to bring their own materials"], selected: @gm_form2.materials_needed), class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :player_experience %>
        <%= form.select :player_experience, options_for_select(["Beginners only", "Beginners welcome", "Basic knowledge", "Experts"], selected: @gm_form2.player_experience),class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :game_attitude %>
        <%= form.select :game_attitude, options_for_select(["Very serious", "Serious", "Fun","Silly","Very silly"], selected: @gm_form2.game_attitude),class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :age_restriction %>
        <%= form.select :age_restriction, options_for_select(["Youth", "Suitable for all ages", "Teen","Adult"], selected: @gm_form2.age_restriction),class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :start_time_first_choice %>
        <%= form.text_field :start_time_first_choice, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :start_time_second_choice %>
        <%= form.text_field :start_time_second_choice, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :start_time_third_choice %>
        <%= form.text_field :start_time_third_choice, class: 'form-control' %>
    </div>
        <div class="field">
        <%= form.label :minimum_number_of_players %>
        <%= form.text_field :minimum_number_of_players, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :maximum_number_of_players %>
        <%= form.text_field :maximum_number_of_players, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :game_description %>
        <%= form.text_field :game_description, class: 'form-control' %>
    </div>
        <div class="field">
        <%= form.label :info_for_staff %>
        <%= form.text_field :info_for_staff, class: 'form-control' %>
    </div>                    
    <%if current_user.admin == true%>
    <div class="field">
        <%= form.label :approved %>
        <%= form.select :approved, options_for_select(["false", "true"], selected: @gm_form2.approved),class: 'form-control' %>
    </div>
    <%end%>
        <div class="actions">
        <%= form.submit 'Update gm_form2', class: 'btn btn-primary'%>
        </div>
    <% end %>
    <%end%>
    </main>