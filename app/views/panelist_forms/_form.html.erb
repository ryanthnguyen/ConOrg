<% content_for :content do %>
    <main role="main" class="container">
<%= form_with model: @panelist_form, local: true do |form| %>
     <%= hidden_field_tag :user_id, user_id %>

     <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :pen_name %>
        <%= form.text_field :pen_name, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :badge_name %>
        <%= form.text_field :badge_name, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :website %>
        <%= form.text_field :website, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :availability %>
        <%= form.text_field :availability, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :primary_professional_focus %>
        <%= form.select :primary_professional_focus, options_for_select(["Anime", "Art/Jewelry", "Children's/YA", "Comics", "Costuming", "Gaming", "Movies/TV", "Music/Dance", "Paranormal", "Science", "Literary"], selected: @panelist_form.primary_professional_focus),class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :secondary_professional_focus %>
        <%= form.select :secondary_professional_focus, options_for_select(["Anime", "Art/Jewelry", "Children's/YA" ,"Comics", "Costuming", "Gaming", "Movies/TV", "Music/Dance", "Paranormal", "Science", "Literary"], selected: @panelist_form.secondary_professional_focus),class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :panelist_before %>
        <%= form.select :panelist_before, options_for_select(["false", "true"], selected: @panelist_form.panelist_before),class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :time_in_pro_row %>
        <%= form.select :time_in_pro_row,options_for_select(["false", "true"], selected: @panelist_form.time_in_pro_row), class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :amount_of_pro_row %>
        <%= form.text_field :amount_of_pro_row, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :place_art_in_art_room %>
        <%= form.select :place_art_in_art_room, options_for_select(["false", "true"], selected: @panelist_form.place_art_in_art_room),class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :recent_credits %>
        <%= form.text_field :recent_credits, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :short_biography %>
        <%= form.text_field :short_biography, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :panel_suggestions %>
        <%= form.text_field :panel_suggestions, class: 'form-control' %>
    </div>
    <div class="field">
        <%= form.label :amount_of_panels_at_convention %>
        <%= form.text_field :amount_of_panels_at_convention, class: 'form-control' %>
    </div>
    <%if current_user.admin == true%>
    <div class="field">
        <%= form.label :approved %>
        <%= form.select :approved, options_for_select(["false", "true"], selected: @panelist_form.approved),class: 'form-control' %>
    </div>
    <%end%>
        <div class="actions">
        <%= form.submit 'Update panelist_form', class: 'btn btn-primary'%>
        </div>
    <% end %>
    <%end%>
    </main>