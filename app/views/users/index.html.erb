<main role="main" class="container">

<h1>User Forms</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">ID</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%if current_user.admin == true%>
        <%= link_to 'destroy', user_path(user), method: :delete %>
        <%end%>
        </td>
        
    </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Home', home_path %> <br> 
</p>
</main><!-- /.container -->