<% content_for :content do %>
    <main role="main" class="container">
<h1>User Forms</h1>
<% if user_signed_in? && current_user.admin == true%>
<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">Name</th>
      <th scope="col">Admin</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.admin %></td>
        <%if user.admin != true%>
        <td><%= link_to "Edit", edit_user_path(user)%>
        <%= link_to 'destroy', user_path(user), method: :delete %>
        </td>
        <%end%>
        
    </tr>
    <% end %>
  </tbody>
</table>

<%elsif user_signed_in?%>
<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">Name</th>
      <th scope="col">Admin</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <%if user.admin == true%>
        <td>Admin</td>
        <%else%>
        <td>Normal User</td>
        <%end%>
        
    </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">Name</th>
      <th scope="col">Admin</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <%if user.admin == true%>
        <td>Admin</td>
        <%else%>
        <td>Normal User</td>
        <%end%>
        
    </tr>
    <% end %>
  </tbody>
</table>
      <p>
          <%= link_to "Register", new_user_registration_path%>
        </p>   
<%end%>
<%end%>
</main><!-- /.container -->